<%# ————— CURSOS ————— %>
<section>
  <h1 class="text-3xl font-bold text-gray-900 mb-1">Cursos</h1>
  <p class="text-gray-500 text-sm mb-8">Explore os cursos disponíveis e acompanhe o seu progresso.</p>

  <% if @cursos.any? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5">
      <% @cursos.each do |curso| %>
        <%= render "curso_card", curso: curso %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-16 bg-white rounded-xl border border-gray-200">
      <p class="text-gray-400 text-sm">Nenhum curso disponível no momento.</p>
    </div>
  <% end %>
</section>

<%# ————— TRILHAS SOLTAS ————— %>
<% if @trilhas_soltas.any? %>
  <section class="mt-14">
    <h2 class="text-xl font-bold text-gray-900 mb-1">Trilhas</h2>
    <p class="text-gray-500 text-sm mb-6">Trilhas de aprendizado independentes.</p>

    <div class="space-y-3">
      <% @trilhas_soltas.each do |trilha| %>
        <%= render "trilha_item", trilha: trilha %>
      <% end %>
    </div>
  </section>
<% end %>

<%# ————— ARTIGOS SOLTOS ————— %>
<% if @artigos_soltos.any? %>
  <section class="mt-14">
    <h2 class="text-xl font-bold text-gray-900 mb-1">Artigos</h2>
    <p class="text-gray-500 text-sm mb-6">Leituras avulsas recomendadas.</p>

    <div class="space-y-2">
      <% @artigos_soltos.each do |artigo| %>
        <%= render "artigo_item", artigo: artigo %>
      <% end %>
    </div>
  </section>
<% end %>
