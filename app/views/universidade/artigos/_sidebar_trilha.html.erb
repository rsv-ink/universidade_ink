<%#
  Partial compartilhado: sidebar de navegação entre artigos de uma trilha.
  Locals: trilha, artigos (array ordenado), concluidos_ids (Set), artigo_ativo (opcional)
%>

<div class="w-64 flex-shrink-0 hidden lg:block">
  <div class="sticky top-6 max-h-[calc(100vh-3rem)] overflow-y-auto">

    <%# Cabeçalho da trilha no sidebar %>
    <div class="mb-4">
      <p class="text-xs font-semibold text-gray-400 uppercase tracking-wider mb-1">Trilha</p>
      <h3 class="font-semibold text-gray-900 text-sm leading-snug"><%= trilha.nome %></h3>

      <% if defined?(current_lojista_id) && current_lojista_id %>
        <%
          total     = artigos.size
          concluidos = concluidos_ids.size
          pct       = total.positive? ? (concluidos.to_f / total * 100).round : 0
        %>
        <div class="mt-2 flex items-center gap-2">
          <div class="flex-1 bg-gray-100 rounded-full h-1.5">
            <div class="h-1.5 rounded-full <%= pct == 100 ? 'bg-green-500' : 'bg-pink-500' %>"
                 style="width: <%= pct %>%"></div>
          </div>
          <span class="text-xs text-gray-400 flex-shrink-0"><%= concluidos %>/<%= total %></span>
        </div>
      <% end %>
    </div>

    <%# Lista de artigos %>
    <nav class="space-y-0.5">
      <% artigos.each_with_index do |a, idx| %>
        <% concluido  = concluidos_ids.include?(a.id) %>
        <% ativo      = defined?(artigo_ativo) && artigo_ativo&.id == a.id %>
        <div id="sidebar_artigo_<%= a.id %>">
          <%= link_to artigo_path(a),
                class: "flex items-center gap-3 px-3 py-2.5 rounded-lg text-sm transition-colors
                        #{ativo ? 'bg-pink-50 text-pink-700 font-medium' : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900'}" do %>
            <%# Status icon %>
            <span class="flex-shrink-0 w-5 h-5 rounded-full flex items-center justify-center text-xs
                         <%= concluido ? 'bg-green-100 text-green-600' :
                             ativo     ? 'bg-pink-100 text-pink-600' :
                                         'bg-gray-100 text-gray-400' %>">
              <% if concluido %>
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/>
                </svg>
              <% elsif ativo %>
                <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M8 5v14l11-7z"/>
                </svg>
              <% else %>
                <span><%= idx + 1 %></span>
              <% end %>
            </span>

            <%# Título truncado %>
            <span class="flex-1 truncate leading-snug"><%= a.titulo %></span>
          <% end %>
        </div>
      <% end %>
    </nav>

  </div>
</div>
