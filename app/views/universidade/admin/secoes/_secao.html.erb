<div id="secao_<%= secao.id %>"
  data-sortable-id="<%= secao.id %>"
  class="bg-white rounded-xl border border-gray-200 shadow-sm p-4 flex items-center gap-4 transition-opacity <%= 'opacity-50' unless secao.visivel? %>">

  <div class="flex items-center gap-2 flex-shrink-0">
    <%# Drag handle %>
    <div class="w-6 h-6 flex items-center justify-center cursor-grab active:cursor-grabbing" data-sortable-handle>
      <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M9 6h.01M9 12h.01M9 18h.01M15 6h.01M15 12h.01M15 18h.01"/>
      </svg>
    </div>

    <%# Ícone de tipo %>
    <div class="w-10 h-10 rounded-lg bg-gray-100 flex items-center justify-center">
      <% if secao.imagem_tipo? %>
        <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
      <% else %>
        <svg class="w-5 h-5 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zm10 0a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zm10 0a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"/>
        </svg>
      <% end %>
    </div>
  </div>

  <%# Info %>
  <div class="flex-1 min-w-0">
    <p class="font-semibold text-gray-900 truncate">
      <%= secao.titulo.presence || "(sem título)" %>
    </p>
    <div class="flex items-center gap-2 mt-1 flex-wrap">
      <% if secao.imagem_tipo? %>
        <span class="text-xs px-2 py-0.5 rounded-full bg-blue-100 text-blue-700 font-medium">Imagem</span>
        <span class="text-xs text-gray-500">
          <%= secao.layout_exibicao == "carrossel" ? "carrossel" : "galeria" %>
        </span>
        <span class="text-xs text-gray-400">·</span>
        <span class="text-xs text-gray-500">
          <%= secao.imagens.count %> <%= secao.imagens.count == 1 ? "imagem" : "imagens" %>
        </span>
      <% else %>
        <span class="text-xs px-2 py-0.5 rounded-full bg-purple-100 text-purple-700 font-medium">Conteúdo</span>
        <span class="text-xs text-gray-500">
          <%= secao.layout_exibicao == "carrossel" ? "carrossel" : "galeria" %>
        </span>
        <span class="text-xs text-gray-400">·</span>
        <span class="text-xs text-gray-500">
          <%= secao.secao_itens.size %> <%= secao.secao_itens.size == 1 ? "item" : "itens" %>
        </span>
      <% end %>
      <% unless secao.visivel? %>
        <span class="text-xs px-2 py-0.5 rounded-full bg-gray-100 text-gray-500">Oculta</span>
      <% end %>
    </div>
  </div>

  <%# Ações %>
  <div class="flex items-center gap-1 flex-shrink-0">

    <%# Visibilidade %>
    <%= form_with url: toggle_visivel_admin_secao_path(secao), method: :patch, class: "inline-flex" do %>
      <% if secao.visivel? %>
        <button type="submit" title="Clique para despublicar"
                class="inline-flex items-center gap-1.5 text-xs font-medium px-2 py-0.5 rounded-full transition-colors bg-green-100 text-green-700 hover:bg-green-200">
          Publicado
        </button>
      <% else %>
        <button type="submit" title="Clique para publicar"
                class="inline-flex items-center gap-1.5 text-xs font-medium px-2 py-0.5 rounded-full transition-colors bg-gray-100 text-gray-700 hover:bg-gray-200">
          Despublicado
        </button>
      <% end %>
    <% end %>


    <%# Editar %>
        <%= link_to edit_admin_secao_path(secao),
          data: { turbo_stream: true },
          title: "Editar",
          class: "p-1.5 text-gray-400 hover:text-blue-600 hover:bg-blue-50 rounded transition-colors" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
      </svg>
    <% end %>

    <%# Excluir %>
    <%= link_to admin_secao_path(secao),
          data: { turbo_method: :delete, turbo_confirm: "Excluir a seção \"#{secao.titulo}\"? Esta ação não pode ser desfeita." },
          title: "Excluir",
          class: "p-1.5 text-gray-400 hover:text-red-600 hover:bg-red-50 rounded transition-colors" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
      </svg>
    <% end %>

  </div>
</div>
