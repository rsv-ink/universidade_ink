<%# Linha de trilha na tabela hierárquica unificada %>
<tr id="trilha_<%= trilha.id %>"
    data-sortable-id="<%= trilha.id %>"
    data-accordion-target="content"
    class="border-b border-gray-100 transition-opacity bg-white hover:bg-gray-50 <%= 'opacity-60 hover:opacity-80' unless trilha.visivel? %>">

  <%# Nome com recuo nível 2 %>
  <td class="px-4 py-2">
    <div class="flex items-center gap-2 pl-20">
      <div data-sortable-handle class="cursor-move text-gray-400 hover:text-gray-600 flex-shrink-0">
        <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20">
          <path d="M7 2a2 2 0 1 0 .001 4.001A2 2 0 0 0 7 2zm0 6a2 2 0 1 0 .001 4.001A2 2 0 0 0 7 8zm0 6a2 2 0 1 0 .001 4.001A2 2 0 0 0 7 14zm6-8a2 2 0 1 0-.001-4.001A2 2 0 0 0 13 6zm0 2a2 2 0 1 0 .001 4.001A2 2 0 0 0 13 8zm0 6a2 2 0 1 0 .001 4.001A2 2 0 0 0 13 14z"/>
        </svg>
      </div>
      <svg class="w-3.5 h-3.5 text-indigo-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"/>
      </svg>
      <span class="text-sm text-gray-700 <%= 'line-through text-gray-400' unless trilha.visivel? %>">
        <%= trilha.nome %>
      </span>
      <% if trilha.tempo_estimado_minutos.present? && trilha.tempo_estimado_minutos > 0 %>
        <span class="text-xs text-gray-400">(<%= trilha.tempo_estimado_minutos %> min)</span>
      <% end %>
    </div>
  </td>

  <%# Status %>
  <td class="px-4 py-2 text-center">
    <% if trilha.rascunho? %>
      <span class="inline-flex items-center gap-1.5 text-xs font-medium px-2 py-0.5 rounded-full bg-amber-100 text-amber-700">
        Rascunho
      </span>
    <% else %>
      <%= form_with url: toggle_visivel_admin_trilha_path(trilha), method: :patch, class: "inline-flex" do %>
        <% if trilha.publicado? %>
          <button type="submit" title="Clique para despublicar"
                  class="inline-flex items-center gap-1.5 text-xs font-medium px-2 py-0.5 rounded-full transition-colors bg-green-100 text-green-700 hover:bg-green-200">
            Publicado
          </button>
        <% else %>
          <button type="submit" title="Clique para publicar"
                  class="inline-flex items-center gap-1.5 text-xs font-medium px-2 py-0.5 rounded-full transition-colors bg-gray-100 text-gray-700 hover:bg-gray-200">
            Despublicado
          </button>
        <% end %>
      <% end %>
    <% end %>
  </td>

  <%# Ações %>
  <td class="px-4 py-2">
    <div class="flex items-center justify-end gap-1">
      <%# Adicionar artigo %>
      <%= link_to new_admin_artigo_path(trilha_id: trilha.id),
            data: { turbo_frame: "_top" },
            title: "Adicionar artigo",
            class: "p-1.5 text-gray-400 hover:text-pink-600 hover:bg-pink-50 rounded transition-colors flex items-center gap-1 text-xs font-medium" do %>
        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Artigo
      <% end %>


      <%# Ver no site %>
      <%= link_to trilha_path(trilha),
            target: "_blank",
            title: "Ver no site",
            class: "p-1.5 text-gray-400 hover:text-gray-600 hover:bg-gray-50 rounded transition-colors" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
      <% end %>

      <%# Editar %>
      <%= link_to edit_admin_trilha_path(trilha),
            data: { controller: "modal-link", action: "click->modal-link#open", turbo: "false" },
            title: "Editar",
            class: "p-1.5 text-gray-400 hover:text-blue-600 hover:bg-blue-50 rounded transition-colors" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
      <% end %>

      <%# Excluir %>
      <%= link_to admin_trilha_path(trilha),
            data: { turbo_method: :delete, turbo_confirm: "Excluir a trilha \"#{trilha.nome}\"? Esta ação não pode ser desfeita." },
            title: "Excluir",
            class: "p-1.5 text-gray-400 hover:text-red-600 hover:bg-red-50 rounded transition-colors" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
        </svg>
      <% end %>
    </div>
  </td>
</tr>
