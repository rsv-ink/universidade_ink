<%# ─────────────────────────────────────────────────────────────
    _panel.html.erb — main hub panel for a selected course
    locals: curso, modulos
───────────────────────────────────────────────────────────── %>

<%# ── Course Header ─────────────────────────────────────────── %>
<div class="bg-white border-b border-gray-200 px-6 py-4 flex-shrink-0">
  <div class="flex items-start justify-between gap-4">
    <div class="flex-1 min-w-0">
      <div class="flex items-center gap-2 mb-1">
        <%# Visibility toggle %>
        <%= form_with url: toggle_visivel_admin_curso_path(curso), method: :patch, class: "inline-flex" do %>
          <button type="submit"
                  title="<%= curso.visivel? ? 'Clique para ocultar' : 'Clique para publicar' %>"
                  class="flex items-center gap-1.5 text-xs font-medium px-2 py-0.5 rounded-full transition-colors
                         <%= curso.visivel? ? 'bg-green-100 text-green-700 hover:bg-green-200' : 'bg-gray-100 text-gray-500 hover:bg-gray-200' %>">
            <span class="w-1.5 h-1.5 rounded-full <%= curso.visivel? ? 'bg-green-500' : 'bg-gray-400' %>"></span>
            <%= curso.visivel? ? 'Visível' : 'Oculto' %>
          </button>
        <% end %>
      </div>

      <h1 class="text-xl font-bold text-gray-900 truncate"><%= curso.nome %></h1>

      <% if curso.tags.any? %>
        <div class="flex flex-wrap gap-1 mt-2">
          <% curso.tags.each do |tag| %>
            <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-blue-50 text-blue-700">
              <%= tag %>
            </span>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="flex items-center gap-2 flex-shrink-0">
      <%# Edit course %>
      <%= link_to edit_admin_curso_path(curso),
            data: { turbo_frame: "modal" },
            title: "Editar curso",
            class: "inline-flex items-center gap-1.5 px-3 py-1.5 text-sm font-medium text-gray-700 bg-white border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
        Editar
      <% end %>

      <%# Delete course %>
      <%= link_to admin_curso_path(curso),
            data: { turbo_method: :delete, turbo_confirm: "Excluir o curso \"#{curso.nome}\"? Esta ação não pode ser desfeita." },
            title: "Excluir curso",
            class: "p-1.5 text-gray-400 hover:text-red-600 hover:bg-red-50 rounded-lg transition-colors" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
        </svg>
      <% end %>

      <%# New module %>
      <%= link_to new_admin_modulo_path(curso_id: curso.id, from_curso_id: curso.id),
            data: { turbo_frame: "modal" },
            class: "inline-flex items-center gap-1.5 px-3 py-1.5 text-sm font-medium text-white bg-pink-600 hover:bg-pink-700 rounded-lg transition-colors" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Novo módulo
      <% end %>
    </div>
  </div>
</div>

<%# ── Módulos em acordeon ──────────────────────────────────── %>
<div class="px-6 py-5 space-y-2">

  <% if modulos.empty? %>
    <div class="text-center py-8 text-gray-400 text-sm">
      Nenhum módulo ainda. Crie o primeiro módulo acima.
    </div>
  <% else %>
    <div class="space-y-2"
         data-controller="sortable"
         data-sortable-url-value="<%= reorder_admin_modulos_path %>">
      <% modulos.each do |modulo| %>
        <%= render "universidade/admin/modulos/accordion_item",
              modulo: modulo,
              trilhas: modulo.trilhas.order(Arel.sql("COALESCE(ordem, id)")),
              curso: curso %>
      <% end %>
    </div>
  <% end %>

  <%# Add module button (dashed) %>
  <%= link_to new_admin_modulo_path(curso_id: curso.id, from_curso_id: curso.id),
        data: { turbo_frame: "modal" },
        class: "flex items-center justify-center gap-2 w-full px-4 py-3 text-sm font-medium text-gray-400 border border-dashed border-gray-300 rounded-xl hover:border-pink-300 hover:text-pink-500 hover:bg-pink-50/30 transition-colors mt-3" do %>
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
    </svg>
    Adicionar módulo a este curso
  <% end %>

</div>

<%# Conteúdo avulso removido do painel do curso por regra de negócio: trilhas e artigos soltos só existem fora do contexto do curso. %>
