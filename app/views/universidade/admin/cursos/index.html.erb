<%# ── Header ──────────────────────────────────────────────────── %>
<div class="px-6 py-6 max-w-7xl mx-auto">
  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Conteúdo</h1>
    </div>
    <div class="flex items-center gap-3">
      <%= link_to new_admin_artigo_path,
            data: { turbo_frame: "_top" },
            class: "inline-flex items-center gap-2 px-4 py-2 bg-white hover:bg-gray-50 text-gray-700 text-sm font-medium rounded-lg transition-colors border border-gray-300" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Novo Artigo
      <% end %>
      <%= link_to new_admin_curso_path,
            data: { controller: "modal-link", action: "click->modal-link#open", turbo: "false" },
            class: "inline-flex items-center gap-2 px-4 py-2 bg-pink-600 hover:bg-pink-700 text-white text-sm font-medium rounded-lg transition-colors" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Novo Curso
      <% end %>
    </div>
  </div>

  <%# ── Tabela hierárquica ───────────────────────────────────── %>
  <div class="flex items-center justify-between mb-4">
    <h2 class="text-lg font-semibold text-gray-900">Cursos</h2>
    <p class="text-xs text-gray-500"><%= @cursos.size %> curso(s)</p>
  </div>

  <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
    <table class="w-full text-sm text-left text-gray-600"
           data-controller="hierarchical-sortable"
           data-hierarchical-sortable-curso-url-value="<%= reorder_admin_cursos_path %>"
           data-hierarchical-sortable-modulo-url-value="<%= reorder_admin_modulos_path %>"
           data-hierarchical-sortable-trilha-url-value="<%= reorder_admin_trilhas_path %>"
           data-hierarchical-sortable-artigo-url-value="<%= reorder_admin_artigos_path %>">
      <thead class="text-xs font-semibold text-gray-500 uppercase tracking-wider bg-gray-50 border-b border-gray-200">
        <tr>
          <th class="px-4 py-3">Títulos</th>
          <th class="px-4 py-3 w-44 text-center">Status</th>
          <th class="px-4 py-3 w-40 text-right">Ações</th>
        </tr>
      </thead>

      <%# ── Cursos com seus filhos ──────────────────────────── %>
      <% if @cursos.empty? %>
        <tbody>
          <tr>
            <td colspan="3" class="px-4 py-16 text-center text-gray-400 text-sm">
              Nenhum curso cadastrado ainda.
              <%= link_to "Criar o primeiro curso", new_admin_curso_path,
                    data: { controller: "modal-link", action: "click->modal-link#open", turbo: "false" },
                    class: "text-pink-600 hover:underline font-medium" %>
            </td>
          </tr>
        </tbody>
      <% else %>
        <% @cursos.each do |curso| %>
          <tbody id="curso_group_<%= curso.id %>"
                 data-sortable-id="<%= curso.id %>"
                 data-controller="accordion"
                 data-accordion-open-value="false"
                 data-accordion-group-value="curso_<%= curso.id %>">

            <%= render "curso", curso: curso %>

            <% curso.modulos.order(Arel.sql("COALESCE(ordem, id)")).each do |modulo| %>
              <%= render "universidade/admin/modulos/modulo_row", modulo: modulo %>

              <% modulo.trilhas.order(Arel.sql("COALESCE(ordem, id)")).each do |trilha| %>
                <%= render "universidade/admin/trilhas/trilha_row", trilha: trilha %>

                <% trilha.artigos.order(Arel.sql("COALESCE(ordem, id)")).each do |artigo| %>
                  <%= render "universidade/admin/artigos/artigo_row", artigo: artigo %>
                <% end %>
              <% end %>
            <% end %>

          </tbody>
        <% end %>
      <% end %>

      <%# ── Conteúdo avulso ─────────────────────────────────── %>
      <% tem_avulsos = @modulos_avulsos.any? || @trilhas_avulsas.any? %>
      <% if tem_avulsos %>
        <tbody>
          <tr>
            <td colspan="3" class="px-4 py-2 text-xs font-semibold text-gray-400 uppercase tracking-wider bg-gray-50 border-t border-gray-200">
              Conteúdo avulso (sem vínculo)
            </td>
          </tr>
        </tbody>

        <tbody id="avulso_group">
          <% @modulos_avulsos.each do |modulo| %>
            <%= render "universidade/admin/modulos/modulo_row", modulo: modulo %>

            <% modulo.trilhas.order(Arel.sql("COALESCE(ordem, id)")).each do |trilha| %>
              <%= render "universidade/admin/trilhas/trilha_row", trilha: trilha %>

              <% trilha.artigos.order(Arel.sql("COALESCE(ordem, id)")).each do |artigo| %>
                <%= render "universidade/admin/artigos/artigo_row", artigo: artigo %>
              <% end %>
            <% end %>
          <% end %>

          <% @trilhas_avulsas.each do |trilha| %>
            <%= render "universidade/admin/trilhas/trilha_row", trilha: trilha %>

            <% trilha.artigos.order(Arel.sql("COALESCE(ordem, id)")).each do |artigo| %>
              <%= render "universidade/admin/artigos/artigo_row", artigo: artigo %>
            <% end %>
          <% end %>
        </tbody>
      <% end %>

    </table>
  </div>

  <%# ── Artigos avulsos ──────────────────────────────── %>
  <% if @artigos_avulsos.any? %>
    <div class="mt-6">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-lg font-semibold text-gray-900">Artigos avulsos</h2>
        <p class="text-xs text-gray-500"><%= @artigos_avulsos.size %> artigo(s) sem vínculo</p>
      </div>
      
      <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
        <table class="w-full text-sm text-left text-gray-600">
          <thead class="text-xs font-semibold text-gray-500 uppercase tracking-wider bg-gray-50 border-b border-gray-200">
            <tr>
              <th class="px-4 py-3 w-16"></th>
              <th class="px-4 py-3">Título</th>
              <th class="px-4 py-3 w-28 text-center">Status</th>
              <th class="px-4 py-3 w-40 text-right">Ações</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-100" data-controller="sortable" data-sortable-url-value="<%= reorder_admin_artigos_path %>">
            <% @artigos_avulsos.each do |artigo| %>
              <tr id="artigo_<%= artigo.id %>"
                  data-sortable-id="<%= artigo.id %>"
                  class="transition-opacity bg-white hover:bg-gray-50 <%= 'opacity-60 hover:opacity-80' unless artigo.visivel? %>">

                <%# Drag handle %>
                <td class="px-4 py-3">
                  <div data-sortable-handle class="cursor-move text-gray-400 hover:text-gray-600">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M7 2a2 2 0 1 0 .001 4.001A2 2 0 0 0 7 2zm0 6a2 2 0 1 0 .001 4.001A2 2 0 0 0 7 8zm0 6a2 2 0 1 0 .001 4.001A2 2 0 0 0 7 14zm6-8a2 2 0 1 0-.001-4.001A2 2 0 0 0 13 6zm0 2a2 2 0 1 0 .001 4.001A2 2 0 0 0 13 8zm0 6a2 2 0 1 0 .001 4.001A2 2 0 0 0 13 14z"/>
                    </svg>
                  </div>
                </td>

                <%# Título %>
                <td class="px-4 py-3">
                  <div class="flex items-center gap-2">
                    <svg class="w-4 h-4 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                    </svg>
                    <span class="font-medium text-gray-900 <%= 'line-through text-gray-400' unless artigo.visivel? %>">
                      <%= artigo.titulo %>
                    </span>
                    <% if artigo.tempo_estimado_minutos.present? && artigo.tempo_estimado_minutos > 0 %>
                      <span class="text-xs text-gray-400">(<%= artigo.tempo_estimado_minutos %> min)</span>
                    <% end %>
                  </div>
                </td>

                <%# Status %>
                <td class="px-4 py-3 text-center">
                  <% if artigo.rascunho? %>
                    <span class="inline-flex items-center gap-1.5 text-xs font-medium px-2 py-0.5 rounded-full bg-amber-100 text-amber-700">
                      Rascunho
                    </span>
                  <% else %>
                    <%= form_with url: toggle_visivel_admin_artigo_path(artigo), method: :patch, class: "inline-flex" do %>
                      <% if artigo.publicado? %>
                        <button type="submit" title="Clique para despublicar"
                                class="inline-flex items-center gap-1.5 text-xs font-medium px-2 py-0.5 rounded-full transition-colors bg-green-100 text-green-700 hover:bg-green-200">
                          Publicado
                        </button>
                      <% else %>
                        <button type="submit" title="Clique para publicar"
                                class="inline-flex items-center gap-1.5 text-xs font-medium px-2 py-0.5 rounded-full transition-colors bg-gray-100 text-gray-700 hover:bg-gray-200">
                          Despublicado
                        </button>
                      <% end %>
                    <% end %>
                  <% end %>
                </td>

                <%# Ações %>
                <td class="px-4 py-3">
                  <div class="flex items-center justify-end gap-1">
                    <%# Editar %>
                    <%= link_to edit_admin_artigo_path(artigo),
                          data: { turbo_frame: "_top" },
                          title: "Editar",
                          class: "p-1.5 text-gray-400 hover:text-blue-600 hover:bg-blue-50 rounded transition-colors" do %>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                      </svg>
                    <% end %>

                    <%# Excluir %>
                    <%= link_to admin_artigo_path(artigo),
                          data: { turbo_method: :delete, turbo_confirm: "Excluir o artigo \"#{artigo.titulo}\"? Esta ação não pode ser desfeita." },
                          title: "Excluir",
                          class: "p-1.5 text-gray-400 hover:text-red-600 hover:bg-red-50 rounded transition-colors" do %>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                      </svg>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>
</div>
