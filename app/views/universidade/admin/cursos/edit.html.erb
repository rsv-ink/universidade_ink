<%= turbo_frame_tag "modal" do %>
  <div class="fixed inset-0 z-50 flex items-center justify-center bg-black/50 backdrop-blur-sm"
       data-controller="modal"
       data-action="click->modal#closeOnBackdrop keydown.esc@window->modal#close">
    <div class="bg-white rounded-2xl shadow-2xl w-full max-w-lg mx-4 max-h-[90dvh] overflow-y-auto">
      <div class="flex items-center justify-between px-6 pt-5 pb-4 border-b border-gray-100">
        <h2 class="text-lg font-semibold text-gray-900">Editar Curso</h2>
        <button type="button" data-action="click->modal#close"
                class="p-1.5 text-gray-400 hover:text-gray-600 hover:bg-gray-100 rounded-lg transition-colors">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>
      <div class="px-6 py-5">
        <%= render "form", curso: @curso %>
      </div>
    </div>
  </div>
<% end %>
