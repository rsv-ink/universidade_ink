<%# locals: artigo, from_curso_id (optional) %>
<li id="artigo_<%= artigo.id %>"
  data-sortable-id="<%= artigo.id %>"
  class="flex flex-wrap sm:flex-nowrap items-center gap-2 sm:gap-3 py-1.5 group w-full max-w-full overflow-hidden <%= artigo.visivel? ? '' : 'opacity-60' %>">

  <span data-sortable-handle
        class="text-gray-300 hover:text-gray-400 cursor-grab active:cursor-grabbing flex-shrink-0 self-start sm:self-center"
        title="Arrastar para reordenar">
    <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 24 24">
      <path d="M8 6a2 2 0 110-4 2 2 0 010 4zM8 14a2 2 0 110-4 2 2 0 010 4zM8 22a2 2 0 110-4 2 2 0 010 4zM16 6a2 2 0 110-4 2 2 0 010 4zM16 14a2 2 0 110-4 2 2 0 010 4zM16 22a2 2 0 110-4 2 2 0 010 4z"/>
    </svg>
  </span>

  <%= form_with url: toggle_visivel_admin_artigo_path(artigo), method: :patch, class: "inline" do %>
    <button type="submit" title="<%= artigo.visivel? ? 'Ocultar' : 'Publicar' %>"
            class="w-1.5 h-1.5 rounded-full flex-shrink-0
                   <%= artigo.visivel? ? 'bg-green-400' : 'bg-gray-300' %>">
    </button>
  <% end %>

  <div class="w-full sm:flex-1 text-sm text-gray-700 truncate min-w-0 flex items-center gap-2">
    <span class="truncate"><%= artigo.titulo %></span>
    <% if artigo.tempo_estimado_minutos.present? && artigo.tempo_estimado_minutos > 0 %>
      <span class="text-xs text-gray-400 flex-shrink-0">(<%= artigo.tempo_estimado_minutos %> min)</span>
    <% end %>
    <% if artigo.rascunho? %>
      <span class="inline-flex items-center gap-1.5 text-xs font-medium px-2 py-0.5 rounded-full transition-colors bg-amber-100 text-amber-700 hover:bg-amber-200">
        Rascunho
      </span>
    <% else %>
      <%= form_with url: toggle_visivel_admin_artigo_path(artigo), method: :patch, class: "inline-flex" do %>
        <% if artigo.publicado? %>
          <button type="submit" title="Clique para despublicar"
                  class="inline-flex items-center gap-1.5 text-xs font-medium px-2 py-0.5 rounded-full transition-colors bg-green-100 text-green-700 hover:bg-green-200">
            Publicado
          </button>
        <% else %>
          <button type="submit" title="Clique para publicar"
                  class="inline-flex items-center gap-1.5 text-xs font-medium px-2 py-0.5 rounded-full transition-colors bg-gray-100 text-gray-700 hover:bg-gray-200">
            Despublicado
          </button>
        <% end %>
      <% end %>
    <% end %>
  </div>

  <div class="flex items-center gap-1 ml-2 opacity-100 transition-opacity flex-shrink-0">
            <%= link_to edit_admin_artigo_path(artigo),
              data: { turbo_frame: "_top" },
              class: "p-1 text-gray-400 hover:text-blue-600 hover:bg-blue-50 rounded transition-colors" do %>
      <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
      </svg>
    <% end %>

    <%= link_to admin_artigo_path(artigo),
          data: { turbo_method: :delete, turbo_confirm: "Excluir o artigo \"#{artigo.titulo}\"?" },
          class: "p-1 text-gray-400 hover:text-red-600 hover:bg-red-50 rounded transition-colors" do %>
      <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
      </svg>
    <% end %>
  </div>
</li>
