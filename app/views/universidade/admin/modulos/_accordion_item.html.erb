<%# locals: modulo, trilhas, curso %>
<div id="modulo_<%= modulo.id %>"
     data-sortable-id="<%= modulo.id %>"
     class="bg-white rounded-xl border border-gray-200 overflow-hidden
       <%= modulo.visivel? ? '' : 'opacity-60' %>"
     data-controller="accordion"
     data-accordion-group-value="modulos">

  <%# ── Module header (always visible) ─────────────────── %>
  <div class="flex items-center gap-3 px-4 py-3 cursor-pointer hover:bg-gray-50 transition-colors"
       data-action="click->accordion#toggle">

    <%# Drag handle for reorder %>
    <span data-sortable-handle
          onclick="event.stopPropagation()"
          class="text-gray-300 hover:text-gray-400 cursor-grab active:cursor-grabbing flex-shrink-0">
      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
        <path d="M8 6a2 2 0 110-4 2 2 0 010 4zM8 14a2 2 0 110-4 2 2 0 010 4zM8 22a2 2 0 110-4 2 2 0 010 4zM16 6a2 2 0 110-4 2 2 0 010 4zM16 14a2 2 0 110-4 2 2 0 010 4zM16 22a2 2 0 110-4 2 2 0 010 4z"/>
      </svg>
    </span>

    <%# Chevron icon %>
    <svg data-accordion-target="icon"
         class="w-4 h-4 text-gray-400 flex-shrink-0 transition-transform duration-200"
         fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
    </svg>

    <%# Visibility toggle (dot) %>
    <%= form_with url: toggle_visivel_admin_modulo_path(modulo), method: :patch,
          class: "inline-flex", html: { onclick: "event.stopPropagation()" } do %>
      <button type="submit" title="<%= modulo.visivel? ? 'Ocultar' : 'Publicar' %>"
              class="w-2 h-2 rounded-full flex-shrink-0 mt-0.5
                     <%= modulo.visivel? ? 'bg-green-400' : 'bg-gray-300' %>">
      </button>
    <% end %>

    <%# Name + trail count %>
    <div class="flex-1 min-w-0">
      <span class="font-medium text-gray-800 text-sm"><%= modulo.nome %></span>
      <span class="ml-2 text-xs text-gray-400">
        (<%= trilhas.size %> trilha<%= trilhas.size == 1 ? '' : 's' %>)
      </span>
    </div>

    <%# Actions (stop propagation to avoid accordion toggle) %>
    <div class="flex items-center gap-0.5 flex-shrink-0" onclick="event.stopPropagation()">
      <%# Edit %>
      <%= link_to edit_admin_modulo_path(modulo),
            data: { turbo_frame: "modal" },
            title: "Editar módulo",
            class: "p-1.5 text-gray-400 hover:text-blue-600 hover:bg-blue-50 rounded transition-colors" do %>
        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
      <% end %>

      <%# Delete %>
      <%= link_to admin_modulo_path(modulo),
            data: { turbo_method: :delete, turbo_confirm: "Excluir o módulo \"#{modulo.nome}\"?" },
            title: "Excluir módulo",
            class: "p-1.5 text-gray-400 hover:text-red-600 hover:bg-red-50 rounded transition-colors" do %>
        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
        </svg>
      <% end %>

    </div>
  </div>

  <%# ── Module body (collapsible) ──────────────────────── %>
  <div data-accordion-target="content" class="hidden border-t border-gray-100">

    <% if trilhas.any? %>
        <ul class="divide-y divide-gray-50 pl-3 sm:pl-4"
          data-controller="sortable"
          data-sortable-url-value="<%= reorder_admin_trilhas_path %>">
        <% trilhas.each do |trilha| %>
          <%= render "universidade/admin/trilhas/hub_item",
                trilha: trilha,
                from_curso_id: local_assigns[:curso]&.id %>
        <% end %>
      </ul>
    <% else %>
      <div class="px-4 py-3 text-xs text-gray-400">Nenhuma trilha neste módulo.</div>
    <% end %>

    <%# Add trail button %>
    <div class="px-4 py-3 border-t border-gray-50 bg-gray-50/60">
      <%= link_to new_admin_trilha_path(modulo_id: modulo.id, from_curso_id: local_assigns[:curso]&.id),
            data: { turbo_frame: "modal" },
            class: "inline-flex items-center gap-1 text-xs font-medium text-pink-600 hover:underline" do %>
        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Adicionar trilha
      <% end %>
    </div>

  </div>
</div>
