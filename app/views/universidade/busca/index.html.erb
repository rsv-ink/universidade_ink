<%# ── Barra de busca ── %>
<div class="mb-8">
  <%= form_with url: busca_path, method: :get, local: true,
        class: "flex items-center gap-2 max-w-xl" do |f| %>
    <%= f.search_field :q, value: @q, placeholder: "Buscar cursos, trilhas e artigos...",
          autofocus: @q.blank?,
          class: "flex-1 text-sm border border-gray-200 rounded-full px-5 py-2.5 focus:outline-none focus:ring-2 focus:ring-pink-300 focus:border-transparent shadow-sm" %>
    <button type="submit"
            class="inline-flex items-center gap-2 px-4 py-2.5 bg-pink-600 hover:bg-pink-700 text-white text-sm font-medium rounded-full transition-colors shadow-sm">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-4.35-4.35M17 11A6 6 0 1 1 5 11a6 6 0 0 1 12 0z"/>
      </svg>
      Buscar
    </button>
  <% end %>
</div>

<% if @q.blank? %>
  <div class="py-16 text-center text-gray-400">
    <svg class="w-12 h-12 mx-auto mb-4 text-gray-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-4.35-4.35M17 11A6 6 0 1 1 5 11a6 6 0 0 1 12 0z"/>
    </svg>
    <p class="text-sm">Digite um termo acima para encontrar cursos, trilhas e artigos.</p>
  </div>

<% else %>

  <%# ── Resultado da busca ── %>
  <% sem_resultados = @cursos.empty? && @trilhas.empty? && @artigos.empty? %>

  <% if sem_resultados %>
    <div class="py-16 text-center text-gray-400">
      <svg class="w-12 h-12 mx-auto mb-4 text-gray-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      <p class="text-base font-medium text-gray-500 mb-1">Nenhum resultado para "<%= @q %>"</p>
      <p class="text-sm">Tente palavras diferentes ou verifique a ortografia.</p>
    </div>

  <% else %>

    <p class="text-sm text-gray-500 mb-6">
      Resultados para <span class="font-semibold text-gray-700">"<%= @q %>"</span>
      — <%= [@cursos.size, @trilhas.size, @artigos.size].sum %> encontrado(s)
    </p>

    <%# ── Cursos ── %>
    <% if @cursos.any? %>
      <section class="mb-10">
        <h2 class="text-base font-semibold text-gray-700 mb-4 flex items-center gap-2">
          <svg class="w-4 h-4 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
          </svg>
          Cursos
          <span class="text-xs font-normal text-gray-400">(<%= @cursos.size %>)</span>
        </h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
          <% @cursos.each do |curso| %>
            <%= render "universidade/home/curso_card", curso: curso %>
          <% end %>
        </div>
      </section>
    <% end %>

    <%# ── Trilhas ── %>
    <% if @trilhas.any? %>
      <section class="mb-10">
        <h2 class="text-base font-semibold text-gray-700 mb-4 flex items-center gap-2">
          <svg class="w-4 h-4 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
          </svg>
          Trilhas
          <span class="text-xs font-normal text-gray-400">(<%= @trilhas.size %>)</span>
        </h2>

        <div class="space-y-3">
          <% @trilhas.each do |trilha| %>
            <div>
              <%= render "universidade/home/trilha_item", trilha: trilha %>
              <% if trilha.modulo&.curso || trilha.modulo %>
                <p class="text-xs text-gray-400 mt-1 pl-1">
                  <% if trilha.modulo %>
                    em: <%= trilha.modulo.nome %>
                    <% if trilha.modulo.curso %>
                      › <%= trilha.modulo.curso.nome %>
                    <% end %>
                  <% end %>
                </p>
              <% end %>
            </div>
          <% end %>
        </div>
      </section>
    <% end %>

    <%# ── Artigos ── %>
    <% if @artigos.any? %>
      <section class="mb-10">
        <h2 class="text-base font-semibold text-gray-700 mb-4 flex items-center gap-2">
          <svg class="w-4 h-4 text-teal-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
          Artigos
          <span class="text-xs font-normal text-gray-400">(<%= @artigos.size %>)</span>
        </h2>

        <div class="space-y-2">
          <% @artigos.each do |artigo| %>
            <div>
              <%= render "universidade/home/artigo_item", artigo: artigo %>
              <% if artigo.trilha %>
                <p class="text-xs text-gray-400 mt-1 pl-1">
                  em: <%= artigo.trilha.nome %>
                  <% if artigo.trilha.modulo %>
                    › <%= artigo.trilha.modulo.nome %>
                    <% if artigo.trilha.modulo.curso %>
                      › <%= artigo.trilha.modulo.curso.nome %>
                    <% end %>
                  <% end %>
                </p>
              <% end %>
            </div>
          <% end %>
        </div>
      </section>
    <% end %>

  <% end %>
<% end %>
