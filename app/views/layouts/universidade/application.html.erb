<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <title>Universidade</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <script src="https://cdn.tailwindcss.com"></script>
  <%= stylesheet_link_tag "universidade/application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
  <style>
    /* Force light mode for all inputs and textareas */
    input[type="text"],
    input[type="email"],
    input[type="number"],
    input[type="password"],
    input[type="search"],
    input[type="tel"],
    input[type="url"],
    input[type="date"],
    input[type="time"],
    input[type="datetime-local"],
    textarea,
    select {
      background-color: white !important;
      color: #111827 !important; /* gray-900 */
      border-color: #d1d5db !important; /* gray-300 */
    }
    
    input::placeholder,
    textarea::placeholder {
      color: #9ca3af !important; /* gray-400 */
    }
    
    input:focus,
    textarea:focus,
    select:focus {
      background-color: white !important;
      border-color: #ec4899 !important; /* pink-500 */
      outline: none !important;
      box-shadow: 0 0 0 3px rgba(236, 72, 153, 0.1) !important;
    }
    
    /* Checkbox and radio styles */
    input[type="checkbox"],
    input[type="radio"] {
      background-color: white !important;
      border-color: #d1d5db !important;
    }
    
    /* Labels */
    label {
      color: #374151 !important; /* gray-700 */
    }
  </style>
</head>
<body class="bg-gray-50 min-h-screen antialiased text-gray-900">

  <header class="bg-white border-b border-gray-200">
    <div class="max-w-5xl mx-auto px-6 py-4 flex items-center justify-between">
      <%= link_to root_path, class: "font-bold text-lg text-gray-900 hover:text-pink-600 transition-colors" do %>
        Universidade
      <% end %>
      
      <%= link_to admin_root_path, class: "text-sm text-gray-600 hover:text-pink-600 transition-colors flex items-center gap-1" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
        Admin
      <% end %>
    </div>
  </header>

  <main class="max-w-5xl mx-auto px-6 py-10">
    <%= yield %>
  </main>

</body>
</html>
